@model User
@{
    ViewData["Title"] = "ResetPassword";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">New Password</h3>
                </div>
                <div class="card-body">
                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="Email" />

                        <div class="form-group">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" id="Password" type="password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="control-label"></label>
                            <input asp-for="ConfirmPassword" class="form-control" id="Password" type="password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        @* <div class="form-group">
                            <label>OTP Expiration Time:</label>
                            <p id="countdown"></p>
                        </div> *@

                        <button type="submit" class="btn btn-primary" id="submitButton">Confirm OTP</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }